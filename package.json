{
  "dependencies": {
    "@chainlink/contracts": "1.5.0",
    "@chainlink/contracts-ccip": "1.6.2",
    "@openzeppelin/contracts": "5.4.0"
  },
  "scripts": {
    "deploy:token": "forge script DeployToken -s 'run(string,string,uint8)' 'SMTA Token' SMTAT 18 --verifier custom --verify",
    "deploy:token-pool": "forge script DeployBurnMintTokenPool --verifier custom --verify",
    "claim-admin": "forge script ClaimAdmin",
    "accept-admin": "forge script AcceptAdminRole",
    "set-token-pool": "forge script SetPool",
    "apply-chain-updates": "forge script ApplyChainUpdates -s 'run(uint256)'",
    "mint": "forge script MintTokens -s 'run(uint256)'",
    "transfer": "forge script TransferTokens -s 'run(uint256,string,uint256)'",
    "exec": "sh -c 'script_name=$1; network=$2; shift 2; npm run $script_name -- --rpc-url $network $@' --",
    "exec:broadcast": "sh -c 'script_name=$1; network=$2; shift 2; npm run $script_name -- --rpc-url $network --broadcast $@' --",
    "start-anvil:sepolia": "source .env && anvil --fork-url $SEPOLIA_RPC",
    "start-anvil:fuji": "source .env && anvil --fork-url $FUJI_RPC -p 8546"
  }
}